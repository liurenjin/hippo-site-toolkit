<?xml version="1.0" encoding="UTF-8"?>
<beans 
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="servletContextAwareBean" class="org.hippoecm.hst.site.container.MyServletContextAwareSpringBean">
  </bean>
  
  <bean id="servletContextAwareBeanList" class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list>
        <ref bean="servletContextAwareBean" />
      </list>
    </property>
  </bean>

</beans>