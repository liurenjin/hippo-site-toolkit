<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

     
  <bean id="org.hippoecm.hst.behavioral.BehavioralService" class="org.hippoecm.hst.behavioral.BehavioralServiceImpl">
      <property name="repository" ref="javax.jcr.Repository" />
      <property name="credentials" ref="javax.jcr.Credentials.hstconfigreader" />
      <property name="configNodePath" value="/behavioral:configuration"/>
      <property name="behavioralDataStore" ref="org.hippoecm.hst.behavioral.BehavioralDataStore" />
  </bean>
  
  <bean id="org.hippoecm.hst.behavioral.BehavioralDataStore" class="org.hippoecm.hst.behavioral.BehavioralDataHttpSessionStore">
    <property name="httpSessionRegistry" ref="org.hippoecm.hst.behavioral.HttpSessionRegistry"/>
  </bean>

  <bean id="org.hippoecm.hst.behavioral.HttpSessionRegistry" class="org.hippoecm.hst.behavioral.WeakReferenceHttpSessionRegistry">
  </bean>

  <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject">
      <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="org.hippoecm.hst.core.container.Pipelines" />
        <property name="targetMethod" value="getPipeline"/>
        <property name="arguments">
            <value>DefaultSitePipeline</value>
        </property>
      </bean>
    </property>
    <property name="targetMethod" value="addInitializationValve"/>
    <property name="arguments">
        <bean class="org.hippoecm.hst.behavioral.core.container.BehavioralUpdateValve"/>
    </property>
 </bean>
 
  <!-- Inject the Behavioral configuration invalidation listener to the EventListenersContaine -->
  <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
      <property name="targetObject" ref="org.hippoecm.hst.core.jcr.EventListenersContainer"/>
      <property name="targetMethod" value="addEventListenerItem"/>
      <property name="arguments">
          <!-- Behavioral configuration invalidation listener -->
          <bean class="org.hippoecm.hst.core.jcr.EventListenerItemImpl">
            <property name="nodeAddedEnabled" value="true" />
            <property name="nodeRemovedEnabled" value="true" />
            <property name="propertyAddedEnabled" value="true" />
            <property name="propertyChangedEnabled" value="true" />
            <property name="propertyRemovedEnabled" value="true" />
            <property name="absolutePath" value="/behavioral:configuration" />
            <property name="deep" value="true" />
            <property name="uuids">
              <null />
            </property>
            <property name="noLocal" value="false" />
            <property name="eventListener">
              <bean class="org.hippoecm.hst.behavioral.BehavioralConfigurationEventListener">
                <property name="behavioralService" ref="org.hippoecm.hst.behavioral.BehavioralService" />
              </bean>
            </property>
          </bean>
      </property>
  </bean>

  <!-- After adding an EventListenerItem we need to invoke stop/start again to trigger this new listener to be added on applicationContext starting -->
  <bean class="org.hippoecm.hst.site.container.ApplicationEventMethodsInvoker">
    <constructor-arg>
      <map>
        <entry>
          <key><value>org.springframework.context.event.ContextStartedEvent</value></key>
          <list>
            <bean class="org.springframework.util.MethodInvoker">
              <property name="targetObject" ref="org.hippoecm.hst.core.jcr.EventListenersContainer"/>
              <property name="targetMethod" value="stop"/>
            </bean>
            <bean class="org.springframework.util.MethodInvoker">
              <property name="targetObject" ref="org.hippoecm.hst.core.jcr.EventListenersContainer"/>
              <property name="targetMethod" value="start"/>
            </bean>
          </list>
        </entry>
      </map>
    </constructor-arg>
  </bean>

  <bean id="btResourceProviders" class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list>
        <bean class="org.apache.cxf.jaxrs.lifecycle.SingletonResourceProvider">
          <constructor-arg>
            <bean class="org.hippoecm.hst.behavioral.rest.PersonaVariantsResource" />
          </constructor-arg>
        </bean>
      </list>
    </property>
  </bean>

  <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="jaxrsHstConfigCxfServerFactoryBean"/>
    <property name="targetMethod" value="setResourceProviders"/>
    <property name="arguments">
      <ref bean="btResourceProviders"/>
    </property>
  </bean>

</beans>