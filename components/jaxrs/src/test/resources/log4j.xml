<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <!-- ====================================================================== -->
  <!-- A P P E N D E R S                                                      -->
  <!-- ====================================================================== -->

  <!-- console -->
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} %-5p [%C.%M():%L] %m%n"/>
    </layout>
  </appender>

  <!-- ====================================================================== -->
  <!-- L O G G E R S                                                          -->
  <!-- ====================================================================== -->

  <category additivity="false" name="org.hippoecm.repository.LocalHippoRepository">
    <level value="warn"/>
    <appender-ref ref="console"/>
  </category>
  
  <category additivity="false" name="org.hippoecm.hst.jaxrs">
    <level value="info"/>
    <appender-ref ref="console"/>
  </category>
  
  <category additivity="false" name="org.apache.cxf">
    <level value="warn"/>
    <appender-ref ref="console"/>
  </category>
  
  <category additivity="false" name="net.sf.ehcache">
    <level value="error"/>
    <appender-ref ref="console"/>
  </category>
  
  <root>
    <level value="warn"/>
    <appender-ref ref="console"/>
  </root>

</log4j:configuration>
