<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

  <bean id="contentApiJacksonObjectMapper" class="com.fasterxml.jackson.databind.ObjectMapper">
    <property name="annotationIntrospector" ref="contentApiJacksonJaxbIntrospector"/>
  </bean>

  <bean id="contentApiJacksonJaxbIntrospector" class="com.fasterxml.jackson.databind.introspect.AnnotationIntrospectorPair" factory-method="pair">
    <constructor-arg>
      <bean class="com.fasterxml.jackson.module.jaxb.JaxbAnnotationIntrospector"/>
    </constructor-arg>
    <constructor-arg>
      <bean class="com.fasterxml.jackson.databind.introspect.JacksonAnnotationIntrospector"/>
    </constructor-arg>
  </bean>

  <bean id="contentApiJsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider">
    <property name="mapper" ref="contentApiJacksonObjectMapper" />
  </bean>

  <bean id="contentApiCorsFilter" class="org.apache.cxf.rs.security.cors.CrossOriginResourceSharingFilter"/>

  <!-- Built-in Entity Providers which are annotated with javax.ws.rs.ext.Provider. -->
  <bean id="defaultContentApiEntityProviders" class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list>
        <ref bean="contentApiJsonProvider"/>
        <ref bean="contentApiCorsFilter"/>
      </list>
    </property>
  </bean>

  <!-- Custom Entity Providers which are annotated with javax.ws.rs.ext.Provider. -->
  <bean id="customContentApiEntityProviders" class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list>
      </list>
    </property>
  </bean>

  <bean id="contentApiAllEntityProviders" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetClass" value="org.apache.commons.collections.ListUtils" />
    <property name="targetMethod" value="union" />
    <property name="arguments">
      <list>
        <ref bean="defaultContentApiEntityProviders" />
        <ref bean="customContentApiEntityProviders" />
      </list>
    </property>
  </bean>


  <bean id="contentApiServiceQueryStringReplacingInterceptor" class="org.hippoecm.hst.jaxrs.cxf.QueryStringReplacingInterceptor">
    <property name="paramNameReplaces">
      <map>
        <!-- The following will replace '_format' parameter name with '_type' parameter name before JAX-RS processing.
        <entry key="_format" value="_type" />
        -->
      </map>
    </property>
    <property name="additionalQueryString">
      <value></value>
      <!-- The following will append additional query string before JAX-RS processing
      <value>addparam1=value1&amp;addparam2=value2</value>
      -->
    </property>
  </bean>

  <bean id="contentApiServiceValve" class="org.hippoecm.hst.core.container.JaxrsRestServiceValve"
        init-method="initialize" destroy-method="destroy">
    <constructor-arg>
      <bean class="org.hippoecm.hst.jaxrs.cxf.CXFJaxrsService">
        <constructor-arg value="jaxrsPlainService"/>
        <property name="servletPath" value=""/>
        <property name="jaxrsServerFactoryBean">
          <bean class="org.apache.cxf.jaxrs.JAXRSServerFactoryBean">
            <property name="address" value="/" />
            <property name="providers" ref="contentApiAllEntityProviders" />
            <property name="resourceProviders" ref="contentApiResourceProviders" />
          </bean>
        </property>
        <property name="inInterceptors">
          <list>
            <ref bean="contentApiServiceQueryStringReplacingInterceptor" />
          </list>
        </property>
      </bean>
    </constructor-arg>
    <property name="valveName" value="contentApiServiceValve" />
  </bean>

  <bean id="contentApiResourceProviders" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetClass" value="org.apache.commons.collections.ListUtils" />
    <property name="targetMethod" value="union" />
    <property name="arguments">
      <list>
        <ref bean="customContentApiResourceProviders" />
        <ref bean="defaultContentApiResourceProviders" />
      </list>
    </property>
  </bean>


  <bean id="abstractNodeVisitor" abstract="true">
    <constructor-arg ref="org.hippoecm.hst.contentrestapi.visitors.VisitorFactory"/>
  </bean>

  <bean id="fallbackNodeVisitors" class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list>
        <bean id="handleVisitor" class="org.hippoecm.hst.contentrestapi.visitors.HandleNodeVisitor" parent="abstractNodeVisitor"/>
        <bean id="hippoFolderVisitor" class="org.hippoecm.hst.contentrestapi.visitors.HippoFolderNodeVisitor" parent="abstractNodeVisitor"/>
        <bean id="hippoDirectoryVisitor" class="org.hippoecm.hst.contentrestapi.visitors.HippoDirectoryNodeVisitor" parent="abstractNodeVisitor"/>
        <bean id="hippoPublicationWorkflowDocumentVisitor" class="org.hippoecm.hst.contentrestapi.visitors.HippoPublicationWorkflowDocumentNodeVisitor" parent="abstractNodeVisitor"/>
        <bean id="hippoPublishableDocumentVisitor" class="org.hippoecm.hst.contentrestapi.visitors.HippoPublishableDocumentNodeVisitor" parent="abstractNodeVisitor"/>
        <bean id="hippoDocumentVisitor" class="org.hippoecm.hst.contentrestapi.visitors.HippoDocumentNodeVisitor" parent="abstractNodeVisitor"/>
        <bean id="htmlNodeVisitor" class="org.hippoecm.hst.contentrestapi.visitors.HtmlNodeVisitor" parent="abstractNodeVisitor"/>
        <bean id="facetSelectNodeVisitor" class="org.hippoecm.hst.contentrestapi.visitors.FacetSelectNodeVisitor" parent="abstractNodeVisitor"/>
        <bean id="mirrorNodeVisitor" class="org.hippoecm.hst.contentrestapi.visitors.MirrorNodeVisitor" parent="abstractNodeVisitor"/>
        <bean id="defaultNodeVisitor" class="org.hippoecm.hst.contentrestapi.visitors.DefaultNodeVisitor" parent="abstractNodeVisitor"/>
      </list>
    </property>
  </bean>

  <bean id="org.hippoecm.hst.contentrestapi.visitors.VisitorFactory" class="org.hippoecm.hst.contentrestapi.visitors.DefaultVisitorFactory">
    <property name="fallbackNodeVisitors" ref="fallbackNodeVisitors"/>
  </bean>

  <bean id="contentRestApiResource" class="org.hippoecm.hst.contentrestapi.ContentRestApiResource">
    <property name="visitorFactory" ref="org.hippoecm.hst.contentrestapi.visitors.VisitorFactory"/>
  </bean>

  <bean id="defaultContentApiResourceProviders" class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list>
        <bean class="org.apache.cxf.jaxrs.lifecycle.SingletonResourceProvider">
          <constructor-arg>
            <ref bean="contentRestApiResource"/>
          </constructor-arg>
        </bean>
      </list>
    </property>
  </bean>

  <!-- Default empty list of custom plain resource providers to be overriden. -->
  <bean id="customContentApiResourceProviders" class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list>
      </list>
    </property>
  </bean>

  <bean id="contentApiPipeline" class="org.hippoecm.hst.core.container.HstSitePipeline">
    <property name="initializationValves">
      <list>
        <ref bean="initializationValve" />
      </list>
    </property>
    <property name="processingValves">
      <list>
        <ref bean="contentApiServiceValve" />
      </list>
    </property>
    <property name="cleanupValves">
      <list>
        <ref bean="diagnosticReportingValve" />
        <ref bean="cleanupValve" />
      </list>
    </property>
  </bean>

  <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject">
      <bean class="org.springframework.beans.factory.config.PropertyPathFactoryBean">
        <property name="targetObject" ref="org.hippoecm.hst.core.container.Pipelines" />
        <property name="propertyPath" value="pipelines"/>
      </bean>
    </property>
    <property name="targetMethod" value="put" />
    <property name="arguments">
      <list>
        <value>ContentApiPipeline</value>
        <ref bean="contentApiPipeline"/>
      </list>
    </property>
  </bean>

</beans>

