<sv:node sv:name="hst-editor" 
  xmlns:sv="http://www.jcp.org/jcr/sv/1.0" 
  xmlns:nt="http://www.jcp.org/jcr/nt/1.0" 
  xmlns:jcr="http://www.jcp.org/jcr/1.0" 
  xmlns:mix="http://www.jcp.org/jcr/mix/1.0" 
  xmlns:hippo="http://www.hippoecm.org/nt/1.2" 
  xmlns:frontend="http://www.hippoecm.org/frontend/nt/1.3">

  <sv:property sv:name="jcr:primaryType" sv:type="Name">
    <sv:value>frontend:plugincluster</sv:value>
  </sv:property>
  
  <sv:node sv:name="configTranslator">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>frontend:plugin</sv:value>
    </sv:property>
    <sv:property sv:name="jcr:mixinTypes" sv:type="Name">
      <sv:value>hippostd:translated</sv:value>
    </sv:property>
    <sv:property sv:name="plugin.class" sv:type="String">
      <sv:value>org.hippoecm.frontend.i18n.ConfigTraversingPlugin</sv:value>
    </sv:property>
    <sv:property sv:name="translator.id" sv:type="String">
      <sv:value>${cluster.id}.service.translator.config</sv:value>
    </sv:property>
    <sv:node sv:name="hippostd:translations">
      <sv:property sv:name="jcr:primaryType" sv:type="Name">
        <sv:value>hippostd:translations</sv:value>
      </sv:property>
      <sv:node sv:name="hst-perspective-title">
        <sv:property sv:name="jcr:primaryType" sv:type="Name">
          <sv:value>nt:base</sv:value>
        </sv:property>
        <sv:property sv:name="jcr:mixinTypes" sv:type="Name">
          <sv:value>hippo:translated</sv:value>
        </sv:property>
        <sv:node sv:name="hippo:translation">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:translation</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:language" sv:type="String">
            <sv:value>nl</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:message" sv:type="String">
            <sv:value>HST Configuratie bewerker</sv:value>
          </sv:property>
        </sv:node>
        <sv:node sv:name="hippo:translation">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:translation</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:language" sv:type="String">
            <sv:value>en</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:message" sv:type="String">
            <sv:value>HST Configuration Editor</sv:value>
          </sv:property>
        </sv:node>
      </sv:node>
      <sv:node sv:name="section-sitemap">
        <sv:property sv:name="jcr:primaryType" sv:type="Name">
          <sv:value>nt:base</sv:value>
        </sv:property>
        <sv:property sv:name="jcr:mixinTypes" sv:type="Name">
          <sv:value>hippo:translated</sv:value>
        </sv:property>
        <sv:node sv:name="hippo:translation">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:translation</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:language" sv:type="String">
            <sv:value>en</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:message" sv:type="String">
            <sv:value>Sitemap</sv:value>
          </sv:property>
        </sv:node>
        <sv:node sv:name="hippo:translation">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:translation</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:language" sv:type="String">
            <sv:value>nl</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:message" sv:type="String">
            <sv:value>Plaatskaart</sv:value>
          </sv:property>
        </sv:node>
      </sv:node>
      <sv:node sv:name="section-pages">
        <sv:property sv:name="jcr:primaryType" sv:type="Name">
          <sv:value>nt:base</sv:value>
        </sv:property>
        <sv:property sv:name="jcr:mixinTypes" sv:type="Name">
          <sv:value>hippo:translated</sv:value>
        </sv:property>
        <sv:node sv:name="hippo:translation">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:translation</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:language" sv:type="String">
            <sv:value>en</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:message" sv:type="String">
            <sv:value>Pages</sv:value>
          </sv:property>
        </sv:node>
        <sv:node sv:name="hippo:translation">
          <sv:property sv:name="jcr:primaryType" sv:type="Name">
            <sv:value>hippo:translation</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:language" sv:type="String">
            <sv:value>nl</sv:value>
          </sv:property>
          <sv:property sv:name="hippo:message" sv:type="String">
            <sv:value>Pagina's</sv:value>
          </sv:property>
        </sv:node>
      </sv:node>    
    </sv:node>  
  </sv:node>
  
  <sv:node sv:name="hstPerspective">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>frontend:plugin</sv:value>
    </sv:property>
    <sv:property sv:name="plugin.class" sv:type="String">
      <sv:value>org.hippoecm.hst.plugins.frontend.HstEditorPerspective</sv:value>
    </sv:property>
    <sv:property sv:name="wicket.id" sv:type="String">
      <sv:value>service.tab</sv:value>
    </sv:property>
    <sv:property sv:name="translator.id" sv:type="String">
      <sv:value>${cluster.id}.service.translator.config</sv:value>
    </sv:property>
    <sv:property sv:name="perspective.title" sv:type="String">
      <sv:value>hst-perspective-title</sv:value>
    </sv:property>
    <sv:property sv:name="wicket.behavior" sv:type="String">
      <sv:value>${cluster.id}.service.behavior.hst</sv:value>
      <sv:value>service.behavior.tabs</sv:value>
    </sv:property>
    <sv:property sv:name="wicket.extensions" sv:type="String">
      <sv:value>extension.navigator</sv:value>
      <sv:value>extension.list</sv:value>
    </sv:property>
    <sv:property sv:name="extension.navigator" sv:type="String">
      <sv:value>${cluster.id}.editor.tree</sv:value>
    </sv:property>
    <sv:property sv:name="extension.list" sv:type="String">
      <sv:value>${cluster.id}.editor.list</sv:value>
    </sv:property>
    <sv:property sv:name="model.folder" sv:type="String">
      <sv:value>${cluster.id}.model.browse.folder</sv:value>
    </sv:property>
    <sv:property sv:name="model.document" sv:type="String">
      <sv:value>${cluster.id}.model.browse.document</sv:value>
    </sv:property>
    <sv:property sv:name="model.folder.root" sv:type="String">
      <sv:value>/hst:configuration/hst:configuration</sv:value>
    </sv:property>
    <sv:property sv:name="browser.id" sv:type="String">
      <sv:value>hst.service.editor</sv:value><!-- TODO: clusterid? -->
    </sv:property>
    <sv:property sv:name="browser.viewers" sv:type="String">
      <sv:value>hst-editor-views</sv:value>
    </sv:property>
  </sv:node>
  
  <sv:node sv:name="hstLayout">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>frontend:plugin</sv:value>
    </sv:property>
    <sv:property sv:name="plugin.class" sv:type="String">
      <sv:value>org.hippoecm.frontend.plugins.yui.layout.WireframePlugin</sv:value>
    </sv:property>
    <sv:property sv:name="behavior.id" sv:type="String">
      <sv:value>${cluster.id}.service.behavior.hst</sv:value>
    </sv:property>
    <sv:node sv:name="yui.config">
      <sv:property sv:name="jcr:primaryType" sv:type="Name">
        <sv:value>frontend:pluginconfig</sv:value>
      </sv:property>
      <sv:property sv:name="root.id" sv:type="String">
        <sv:value>hst-perspective-wrapper</sv:value>
      </sv:property>
      <sv:property sv:name="linked.with.parent" sv:type="Boolean">
        <sv:value>true</sv:value>
      </sv:property>
      <sv:property sv:name="units" sv:type="String">
        <sv:value>left</sv:value>
        <sv:value>center</sv:value>
      </sv:property>
      <sv:property sv:name="left" sv:type="String">
        <sv:value>id=hst-perspective-left,body=hst-perspective-left-body,resize=true,scroll=false,minWidth=200,width=200,gutter=0px 0px 0px 0px</sv:value>
      </sv:property>
      <sv:property sv:name="center" sv:type="String">
        <sv:value>id=hst-perspective-center,body=hst-perspective-center-body,minWidth=400,scroll=false,gutter=0px 0px 0px 0px</sv:value>
      </sv:property>
    </sv:node>  
  </sv:node>

  <sv:node sv:name="hstSectionTree">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>frontend:plugin</sv:value>
    </sv:property>
    <sv:property sv:name="plugin.class" sv:type="String">
      <sv:value>org.hippoecm.frontend.plugins.cms.browse.tree.SectionTreePlugin</sv:value>
    </sv:property>
    <sv:property sv:name="wicket.id" sv:type="String">
      <sv:value>${cluster.id}.editor.tree</sv:value>
    </sv:property>
    <sv:property sv:name="wicket.model" sv:type="String">
      <sv:value>${cluster.id}.model.browse.folder</sv:value>
    </sv:property>
    <sv:property sv:name="translator.id" sv:type="String">
      <sv:value>${cluster.id}.service.translator.config</sv:value>
    </sv:property>
    <sv:property sv:name="wicket.extensions" sv:type="String">
      <sv:value>extension.sitemap</sv:value>
      <sv:value>extension.pages</sv:value>
    </sv:property>
    <sv:property sv:name="headers" sv:type="String">
      <sv:value>section-sitemap</sv:value>
      <sv:value>section-pages</sv:value>
    </sv:property>
    <sv:property sv:name="extension.sitemap" sv:type="String">
      <sv:value>${cluster.id}.tree.sitemap</sv:value>
    </sv:property>
    <sv:property sv:name="extension.pages" sv:type="String">
      <sv:value>${cluster.id}.tree.pages</sv:value>
    </sv:property>
  </sv:node>

  <sv:node sv:name="sitemapTreeLoader">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>frontend:plugin</sv:value>
    </sv:property>
    <sv:property sv:name="plugin.class" sv:type="String">
      <sv:value>org.hippoecm.frontend.plugin.loader.PluginClusterLoader</sv:value>
    </sv:property>
    <sv:property sv:name="cluster.name" sv:type="String">
      <sv:value>hst-tree-views/sitemap</sv:value>
    </sv:property>
    <sv:node sv:name="cluster.config">
      <sv:property sv:name="jcr:primaryType" sv:type="Name">
        <sv:value>frontend:pluginconfig</sv:value>
      </sv:property>
      <sv:property sv:name="wicket.id" sv:type="String">
        <sv:value>${cluster.id}.tree.sitemap</sv:value>
      </sv:property>
      <sv:property sv:name="wicket.model" sv:type="String">
        <sv:value>${cluster.id}.model.browse.folder</sv:value>
      </sv:property>
    </sv:node>
  </sv:node>

  <sv:node sv:name="pagesTreeLoader">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>frontend:plugin</sv:value>
    </sv:property>
    <sv:property sv:name="plugin.class" sv:type="String">
      <sv:value>org.hippoecm.frontend.plugin.loader.PluginClusterLoader</sv:value>
    </sv:property>
    <sv:property sv:name="cluster.name" sv:type="String">
      <sv:value>hst-tree-views/pages</sv:value>
    </sv:property>
    <sv:node sv:name="cluster.config">
      <sv:property sv:name="jcr:primaryType" sv:type="Name">
        <sv:value>frontend:pluginconfig</sv:value>
      </sv:property>
      <sv:property sv:name="wicket.id" sv:type="String">
        <sv:value>${cluster.id}.tree.pages</sv:value>
      </sv:property>
      <sv:property sv:name="wicket.model" sv:type="String">
        <sv:value>${cluster.id}.model.browse.folder</sv:value>
      </sv:property>
    </sv:node>
  </sv:node>
  
</sv:node>  