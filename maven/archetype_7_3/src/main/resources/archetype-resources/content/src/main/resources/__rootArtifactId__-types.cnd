#set($hyphen = '-')
#set($empty = '')
<'${rootArtifactId.replace($hyphen,$empty)}'='http://www.hippoecm.org/hst/nt/${rootArtifactId.replace($hyphen,$empty)}/1.0'>
<'hippo'='http://www.onehippo.org/jcr/hippo/nt/2.0'>
<'hippostd'='http://www.onehippo.org/jcr/hippostd/nt/2.0'>
<'hippostdpubwf'='http://www.onehippo.org/jcr/hippostdpubwf/nt/1.0'>

[${rootArtifactId.replace($hyphen,$empty)}:basedocument] > hippostdpubwf:document, hippostd:publishableSummary, hippo:document

[${rootArtifactId.replace($hyphen,$empty)}:textdocument] > ${rootArtifactId.replace($hyphen,$empty)}:basedocument
  - ${rootArtifactId.replace($hyphen,$empty)}:summary (string)
  - ${rootArtifactId.replace($hyphen,$empty)}:title (string)
  + ${rootArtifactId.replace($hyphen,$empty)}:body (hippostd:html)